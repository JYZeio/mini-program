/* pages/mine/mine.wxss */
.header{
	height: 400rpx;
	background-color: #027a3a;
	position: relative;
}
.btn{
	width: 300rpx;
	height: 80rpx;
	line-height: 80rpx;
	border: 1rpx solid  rgb(95, 95, 95);
	position: absolute;
	color: rgb(204, 204, 204);
	text-align: center;
	top: 0;
	left: 0;
	right: 0;
	bottom: 140rpx;
	margin: auto;
	border-radius: 10rpx;
}
.my{
	margin: 20rpx;
}
.list{
	display: flex;
	text-align: center;
	font-size: 20rpx;
}
.listimg{
	width: 80rpx;
	height: 80rpx;
}
.listItem{
	flex: 1;
	padding: 20rpx;
}
.item{
	display: flex;
	margin: 40rpx;
}
.item > text{
	width: 100%;
	margin-left: 20rpx;
	padding-bottom: 10rpx;
	border-bottom: 1rpx solid black;
}
.itemsimg{
	height: 50rpx;
	width: 50rpx;
}