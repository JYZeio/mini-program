/* pages/shopcar/shopcar.wxss */
.box{
	display: flex;
}
.jieshuan{
	width: 100%;
	height: 100rpx;
	position: fixed;
	bottom: 0;
	background-color: white;
}
.top{
	height: 100vh;
	overflow-y: scroll;
	margin-bottom: 100rpx;
}
.quanxuan{
	display: flex;
	align-items: center;
}
.carlist{
	display: flex;
	align-items: center;
	padding: 20rpx;
	overflow-y: scroll;
}
.carlist > icon {
	margin-right: 20rpx;
}
.carlist__imgs{
	height: 250rpx;
	width: 210rpx;
}
.content{
	flex: 1;
	padding-top: 40rpx;
}
.content__top{
	width: 95%;
	margin-left: 20rpx;
	display:flex;
	justify-content: space-evenly;
}
.content__top__text{
	flex: 1;
}
.content__top__imgs{
	width: 50rpx;
	height: 50rpx;
}
.content__bottom{
	width: 95%;
	margin-left: 20rpx;
	margin-top: 40rpx;
	display:flex;
	
	justify-content: space-between;
}
.content__bottom__text{
	width: 120rpx;
	color: red;
}
.jsj{
	border: 1rpx solid black;
	border-radius: 10rpx;
	margin-right: 20px;
	display: flex;
}
.jsj > text{
	width: 60rpx;
	text-align: center;
}
.numnum{
	width: 100rpx;
	height: 50rpx;
	border-left: 1rpx solid black;
	border-right: 1rpx solid black;
	text-align: center;
}