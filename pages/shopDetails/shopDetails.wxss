.share{
	height: 100rpx;
}
.share__img{
	margin: 10rpx 20rpx;
	border-radius: 10rpx;
	border: 1rpx solid rgb(173, 173, 173);
	float: right;
	height: 100rpx;
	width: 100rpx;
}
.shop__pri{
	margin-top: 40rpx;
	display: flex;
	justify-content: space-between;
	height: 80rpx;
	border-bottom: 1rpx solid rgb(214, 214, 214);
}
.shop__pri__left{
margin-left: 20rpx;
color: red;
}
.shop__pri__num{
	margin-right: 20rpx;
}
.shop__bottom{
	display: flex;
	padding-left: 20rpx;
	height: 80rpx;
	align-items: center;
}
.shop__bottom__left{
	font-size: 35rpx;
	color: gray;
}
.shop__bottom > icon{
	margin: 0 20rpx;
}
.bigbox{
	height: 15rpx;
	background-color: #f5f5f5;
}
.shop__phone{
	display: flex;
	justify-content: center;
