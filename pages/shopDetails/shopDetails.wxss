}
.shop__phone__img{
	width: 70rpx;
	height: 70rpx;
}
.login{
	width: 140rpx;
}
.weix{
	margin-left: 20rpx;
}
.shop__phone__text{
	flex: 1;
	margin-left: 20rpx;
}
.goshop{
	text-align: center;
}
.goshop__text{
	margin: 20rpx auto;
	display: block;
	width: 220rpx;
	line-height: 100rpx;
