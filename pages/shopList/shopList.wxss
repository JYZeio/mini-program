/* pages/shopList/shopList.wxss */
.header{
	display: flex;
}
.header__search{
	width: 85%;
	margin: 20rpx 0 20rpx 20rpx;
	height: 70rpx;
	border: 1rpx solid gray;
	background-color: #f5f5f5;
	display: flex;
	align-items: center;
	border-radius: 10rpx;
}

.header__search__btn{
	width: 120rpx;
	border-radius: 10rpx;
	margin: 20rpx;
	line-height: 70rpx;
	text-align: center;
	border: 1rpx solid gray;
	background-color: #f5f5f5;
}
.tabbar{
	display: flex;
	justify-content: center;
	text-align: center;
}
.tabbar__item{
	flex: 1;
	margin-top: 10rpx;
	display: flex;
	justify-content: center;
}
.tabbar__img{
	display: flex;
	flex-direction: column;
	justify-content: center;
	margin-left: 10rpx;
}
.tabbatr__img1{
	width: 30rpx;
	height: 30rpx;
}
.tabbatr__img2{
	width: 30rpx;
	height: 30rpx;
	transform: rotate(180deg);
}
.action{
	color: red;
}
.shoplists{
	display: flex;
	align-items: center;
}
.shoplists__img{
	width: 280rpx;
	height: 180rpx;
	margin: 20rpx 0 20rpx 20rpx;
}
.shoplists__content{
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	height: 150rpx;
	margin-left: 10rpx;
}
.shoplists__content__chent{
	width: 100%;
	display: flex;
	justify-content: space-between;
}
.shoplists__content__chent__pir{
	color: red;
}
.loading{
	display: flex;
	justify-content: center;
	align-items: center;
}